<section id="sponsors-page">
  <div class="page-header">
    <h1>Sponsors</h1>
  </div>
  <div class="lead">
    <h2>Become a sponsor!</h2>
    <p class="text-center">
      For more information, download the
      <a href='/prospectus.pdf'>sponsorship prospectus</a> or contact us directly
      via <a href='mailto:rbbsponsorships@gmail.com'>email</a>!
    </p>
  </div>
  <div class="sponsor-images row">
    <div class="span12">
      <% @sponsors.each do |sponsor| %>
        <a href="<%= sponsor[0] %>"><img src="<%= sponsor[1] %>"/></a>
      <% end %>
    </div>
  </div>
</section>
